

   <div class="container">
        <div class="card card-container">
            <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
            <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card"></p>
            <form class="form-signin">
            	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :class => "form-signin") do |f| %>
                <span id="reauth-email" class="reauth-email"></span>
                <%= f.input :email, :class =>"form-control", required: false, autofocus: true %>
                <%= f.input :password, :class => "form-control", required: false %>
                
                <div id="remember" class="checkbox">
                    <label>
                        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                    </label>
                </div>
                <%= f.button :submit, "Log in", :class => "btn btn-lg btn-primary btn-block btn-signin" %>
                
            </form>
            <a href="#" class="forgot-password">
               <%= render "devise/shared/links" %>
            </a>
        </div>
    </div>
    <% end %>







